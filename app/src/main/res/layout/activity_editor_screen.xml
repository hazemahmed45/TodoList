<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hazem.todolist.activity.EditorScreen">
    <TextView
        android:id="@+id/tv_editor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todo_title"
        android:layout_marginTop="@dimen/default_48"
        android:layout_marginRight="@dimen/default_16"
        android:layout_marginLeft="@dimen/default_16"
        android:layout_marginBottom="@dimen/default_16"
        android:textAppearance="?android:textAppearanceLarge"/>
    <TextView
        android:id="@+id/tv_editor_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todo_desc"
        android:layout_below="@+id/et_editor_title"
        android:layout_margin="@dimen/default_16"
        android:textAppearance="?android:textAppearanceMedium"/>
    <EditText
        android:id="@+id/et_editor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_editor_title"
        android:layout_marginLeft="@dimen/default_16"
        android:layout_marginRight="@dimen/default_16"
        />
    <EditText
        android:id="@+id/et_editor_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_editor_desc"
        android:layout_marginLeft="@dimen/default_16"
        android:layout_marginRight="@dimen/default_16"/>
    <Button
        android:id="@+id/btn_editor"
        android:layout_width="@dimen/default_124"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Add"
        android:layout_margin="@dimen/default_48"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:background="@color/colorPrimary"
        />
</RelativeLayout>
