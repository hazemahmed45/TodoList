<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_item_todo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@+id/iv_item_todo_delete"
        />
    <ImageView
        android:id="@+id/iv_item_todo_delete"
        android:layout_width="@dimen/default_30"
        android:layout_height="@dimen/default_30"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/default_24"
        android:src="@drawable/trash"
        />
</RelativeLayout>